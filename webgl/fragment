#ifdef GL_ES
precision highp float;
#endif

varying vec4 vColor;
varying vec3 vLightWeighting;
varying vec2 vTexture;

uniform sampler2D uSampler;
uniform bool useTexture;
uniform bool isWall;
uniform float colorTintR;
uniform float colorTintG;
uniform float colorTintB;
uniform float colorTintA;

void main(void) {
    vec3 color = vec3(colorTintR, colorTintG, colorTintB);
    if (isWall) color = vec3(0, 0, 0);
    if (useTexture) {
        vec4 texColor = texture2D(uSampler, vec2(vTexture.s, vTexture.t));
        vec4 finalColor =  vec4(color * vLightWeighting * texColor.rgb, vColor.a);
        gl_FragColor = finalColor;
    }   else  gl_FragColor = vec4(color * vLightWeighting, vColor.a);
}
